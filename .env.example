# Environment
NODE_ENV=development

# Server
PORT=5050
CORS_ORIGIN=http://localhost:3000

# Database (Production should use managed database)
DATABASE_URL="postgresql://username:password@hostname:5432/dbname?schema=public"

# Redis (Production should use managed Redis)
REDIS_URL="redis://username:password@hostname:6379"
REDIS_HEALTH_CHECK_INTERVAL=30

# JWT (IMPORTANT: Use a strong 32+ character secret in production)
JWT_SECRET="your-secret-key-minimum-32-characters-long-generated-securely"
JWT_EXPIRES_IN="1h"

# Sentry (optional - for error tracking)
SENTRY_DSN=""

# Logging
LOG_LEVEL=info

# Deployment
TRUST_PROXY=1
